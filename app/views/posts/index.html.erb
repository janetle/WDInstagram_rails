<div class ='container'>
	<h1>All Posts</h1>

	<%= link_to 'New post', new_post_path %>

  	<% @posts.each do |post| %>
    
      <p><%= post.title %></p>
   	  <p><%= post.author_name %></p>
   	  <p><%= post.photo_url %></p>
      <%= link_to 'Show', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Delete', post_path(post),
								        method: :delete,
								        data: { confirm: 'Are you sure?' },
								        :class => 'btn btn-default' %>
    
  	<% end %>
</div>